<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardBackgroundColor="#000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_date"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="18dp"
                android:text="21-08-1997" />

            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textview_date"
                android:layout_marginStart="36dp"
                android:layout_toEndOf="@+id/textview_date"
                android:text="Rs.1809" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:id="@+id/scroll_address"
                android:layout_below="@+id/textview_date"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:text="cghvdbchhbdsibuds "
                    android:id="@+id/textview_scroll_address"
                    />
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/scroll_address"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:text="hvsdhvsdiygvdsa"
                    android:id="@+id/textview_scroll_items"
                    />
            </ScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>