<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="60dp"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.foodsingh.mindwires.foodsingh.menu"

    android:baselineAligned="false">
    <TextView
        android:id="@+id/attack2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:background="#dac598"
        android:fontFamily="monospace"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="175dp"
        android:textColor="@color/text_color"
        android:scrollbars="vertical"
        android:padding="3dp"
        android:text="Attack! On the Food."/>

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_ad"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/advertisement1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SORT BY"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:textColor="@color/grey"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:scrollbars="none"
        >
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="Cuine"

            android:layout_margin="5dp"
            android:layout_height="30dp"
            android:layout_width="100dp"
            android:gravity="center"

            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:src="@drawable/cuisine_"
            android:id="@+id/cuisine"
            android:scaleType="centerCrop"
            android:background="@drawable/sort_back_gray"

            android:textColor="@color/white"
            />
        <TextView
            android:background="@drawable/sort_back_gray"
            android:layout_margin="5dp"

            android:layout_weight="1"

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:id="@+id/time"
            android:scaleType="centerCrop"
            android:textColor="@color/white"
            android:text="Ti"
            android:gravity="center"
            android:src="@drawable/time_"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cuisine" />
        <TextView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/combo"
            android:background="@drawable/sort_back_gray"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:text="mbo"
            android:gravity="center"

            android:textSize="15dp"
            android:fontFamily="monospace"
            android:id="@+id/combo"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/time"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/combo"
            android:background="@drawable/sort_back_gray"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:textSize="15dp"
            android:scaleType="centerCrop"
            android:text="Drinks"

            android:gravity="center"
            android:id="@+id/drinks"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/time"
            android:layout_alignParentTop="true"
            />
    </LinearLayout>
    </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/noitem"
                    android:textSize="20dp"
                    android:textColor="@color/jhat"
                    android:fontFamily="monospace"
                    android:text="SORRY,NO ITEM AVAILABLE"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"

                android:scrollbars="vertical"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"
                >

            </android.support.v7.widget.RecyclerView>
            </FrameLayout>



        </LinearLayout>


</LinearLayout>
