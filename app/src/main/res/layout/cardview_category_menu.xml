<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        CardView:cardElevation="10dp"
        android:id="@+id/cardView"

        android:elevation="5dp"
        card_view:cardCornerRadius="8dp"
        >
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unavailable"
                android:padding="4dp"
                android:textStyle="bold"
                android:id="@+id/dish_price"
                android:textColor="#2ECC71"
                android:layout_marginRight="135dp"
                android:background="@drawable/shaperating"
                android:layout_marginTop="27dp"
                android:textSize="15.5dp"

                android:layout_gravity="right"
                />
            <!--   Recycler View Item Row   -->
            <LinearLayout

                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">



            </LinearLayout>


            <TextView

                android:id="@+id/dish_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="31dp"
                android:textSize="14dp"
                android:text="Egg Chicken Fried Rice"
                android:maxLines="1"
                />







            <ImageButton
                android:layout_width="30dp"
                android:id="@+id/minus"
                android:layout_height="30dp"
                android:background="@drawable/ic_remove_circle_outline_black_24dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:layout_width="30dp"
                android:id="@+id/plus"

                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="90dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:textSize="13dp"
                android:text="0"
                android:id="@+id/item_quantity"
                android:textColor="#96184FFF"
                android:layout_marginTop="28dp"
               android:layout_marginLeft="110dp"
                android:textStyle="bold"
                android:background="@drawable/textbackground2"
               android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>