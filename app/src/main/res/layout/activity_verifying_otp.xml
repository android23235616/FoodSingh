<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_another"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.fsingh.pranshooverma.foodsingh.verifying_otp">


    <FrameLayout

        android:background="#673AB7"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:src="@drawable/background_another"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </FrameLayout>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:alpha="0.9"
            android:layout_width="90dp"
            android:layout_marginLeft="5dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_sentiment_satisfied_black_24dp"
            android:id="@+id/imageView3"
            android:layout_alignBottom="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:alpha="0.9"
        android:layout_width="90dp"
        android:layout_marginLeft="5dp"
        android:layout_height="90dp"
        android:background="@drawable/fork"
        android:id="@+id/fork"
        android:layout_alignBottom="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="37dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/welcome"
            android:alpha="0.85"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:text="Awesome, Thanks"
            android:layout_marginBottom="73dp"
            android:layout_above="@+id/otp"
            android:layout_centerHorizontal="true" />



        <EditText

            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="20dp"
            android:inputType="number"
            android:padding="10dp"
            android:hint="Enter Code"
            android:maxLength="4"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#B3B6B7"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
    </LinearLayout>



    <TextView
        android:id="@+id/Confirmation"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:alpha="0.8"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="We have sent the OTP to your registered\n mobile number to reset your password."
        android:layout_alignTop="@+id/verify"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/verify"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:alpha="0.9"
        android:backgroundTint="#196F3D"
        android:background="@drawable/buttonbackground"
        android:text="Verify"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:alpha="0.7"
        android:id="@+id/resendotp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:background="@null"
        android:text="Resend Code"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/text_color"
        android:layout_below="@+id/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />


</RelativeLayout>
