<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:id="@+id/card_view"
    android:padding="5dp"
    android:layout_width="match_parent">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="100dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_viewHotelPics"
        android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="15dp"

        >

        <!--   Recycler View Item Row   -->
        <LinearLayout
            android:layout_width="86dp"
            android:orientation="vertical"
            android:layout_height="86dp"
            android:gravity="center"
            >


            <com.makeramen.roundedimageview.RoundedImageView
                android:background="@drawable/whatsapp"
                android:id="@+id/img"
                app:riv_corner_radius_top_left="15dp"
                app:riv_corner_radius_top_right="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:id="@+id/text_char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/menu_text"
        android:fontFamily="cursive"
        android:text="My Food"
        android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail lawda lasun"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/detail"
            android:textColor="@color/text_color"
            />

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>