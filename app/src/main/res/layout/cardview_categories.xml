<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="132dp"
    android:layout_margin="5dp"
    android:id="@+id/card_view"

    android:padding="5dp"
    android:layout_width="match_parent">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"


    android:background="#ffffff"
    android:layout_height="100dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_viewHotelPics"
        android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="32dp"

        >

        <!--   Recycler View Item Row   -->
        <LinearLayout

            android:layout_width="90dp"
            android:orientation="vertical"
            android:layout_height="90dp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:background="@drawable/whatsapp"
                android:id="@+id/img"
                app:riv_corner_radius_top_left="15dp"
                app:riv_corner_radius_top_right="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView

        android:id="@+id/text_char_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
       android:layout_marginLeft="5sp"
        android:textColor="@color/menu_text"
        android:fontFamily="cursive"
        android:text="My Food"
        android:textSize="30dp"/>

</LinearLayout>

</android.support.v7.widget.CardView>