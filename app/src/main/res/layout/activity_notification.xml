<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_new"
    android:layout_height="match_parent"
    tools:context="com.fsingh.pranshooverma.foodsingh.NotificationActivity">

    <include layout="@layout/my_toolbar3"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text"
        android:text="Notifications"
        android:textColor="@color/text_color"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="90dp"
        android:background="@drawable/buttonbackground"
        android:layout_marginRight="90dp"
        android:layout_height="wrap_content"
        android:padding="6dp"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notificationRecycler"></android.support.v7.widget.RecyclerView>

</LinearLayout>
